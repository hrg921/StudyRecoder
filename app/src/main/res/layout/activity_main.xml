<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity" android:orientation="vertical"
    android:background="#b6dccf">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Study Recoder"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECORD"
        android:id="@+id/main_button_record"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:textSize="15dp"
        android:padding="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIST"
        android:id="@+id/main_button_list"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRAPH"
        android:id="@+id/main_button_graph"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:textSize="15dp" />

</LinearLayout>
