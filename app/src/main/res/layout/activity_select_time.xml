<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mp.hd3534.studyrecoder.SelectTimeActivity"
    android:orientation="vertical"
    android:background="#b6dccf">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="년간 그래프"
        android:id="@+id/select_time_yearly_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="월간 그래프"
        android:id="@+id/select_time_monthly_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일간 그래프"
        android:id="@+id/select_time_daily_button"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/select_time_yearly_button"
        android:layout_marginBottom="150dp" />

</RelativeLayout>